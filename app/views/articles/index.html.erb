<div class="container">
	<h1>Articles<div class="pull-right">
		<%=link_to "New Article", new_article_path, class: "btn btn-success" %>
	</div></h1>
	<div class="row">
		<table class="table table-hover">
			<thead>
				<tr>
					<th>Title</th>
					<th>Description</th>
					<th>Created at</th>
					<th>Actions</th>	
				</tr>
			</thead>
			<tbody>
				<%@articles.each do |article|%>
				<tr>
					<td><b><%=link_to article.title, article_path(article)%></b></td>
					<td><%=article.description%></td>
					<td><%=time_ago_in_words(article.created_at) %></td>
					<td><%=link_to "<i class='fa fa-pencil'></i>".html_safe, edit_article_path(article), class: "btn btn-info"%> <%=link_to "<i class='fa fa-trash'></i>".html_safe, article_path(article), method: :delete, data: {confirm: 'Are you sure?'}, class: "btn btn-danger"%></td>
				</tr>
				<%end%>
			</tbody>
		</table>
	</div>
</div>
<style>
.panel{
	border-radius: 0px !important;
}
</style>
<script>
	$( document ).ready(function() {
		$("img").addClass("img-responsive");
	});
</script>
